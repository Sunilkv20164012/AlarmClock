<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.neilson.alarm"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        
        <activity
            android:name="com.example.sunil.alarmclock.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.example.sunil.alarmclock.AlarmActivity"
            android:label="Alarm Clock"></activity>
        <activity
            android:name="com.example.sunil.alarmclock.preferences.AlarmPreferencesActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.sunil.alarmclock.AlarmActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.sunil.alarmclock.AlarmActivity" />
        </activity>        
        <activity android:name="com.example.sunil.alarmclock.NotificationActivity"
            android:label="Alarm Clock"></activity>
        <service
            android:process="com.example.sunil.alarmclock.serviceProcess"
            android:name="com.example.sunil.alarmclock.service.AlarmService"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            >
        </service>
		<receiver android:name="com.example.sunil.alarmclock.service.AlarmServiceBroadcastReciever" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <activity
            android:name = "com.example.sunil.alarmclock.alert.AlarmAlertActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
		<receiver android:name="com.example.sunil.alarmclock.alert.AlarmAlertBroadcastReciever" >
        </receiver>
        <receiver android:name = "com.example.sunil.alarmclock.telephony.PhoneStateChangedBroadcastReciever">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>